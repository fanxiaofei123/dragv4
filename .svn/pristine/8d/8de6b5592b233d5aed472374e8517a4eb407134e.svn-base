//ajax文件预览
function reViewAjax(curDir) {
    $.ajax({
        url:basePath+"/drag/filemanage/readfile.do",
        type: 'POST',
        dataType: "json",
        data:{"curDir":curDir} ,
        success: function (data) {
            console.log(data);
            // alert(data[0][0])
            var tr="";
            var dataLength=50;
            var columns=1;
            if (data.length<50){
                dataLength=data.length;
            }
            for (var i=0;i<dataLength;i++){
                if (data[i].length>columns){
                    columns=data[i].length;
                }
                tr+="<tr>";
                for (var j=0;j<data[i].length;j++){
                    tr+="<td>"+data[i][j]+"</td>";
                }
                tr+="</tr>";
            }
            $("#columns").text(columns);
            $("#bodyRowCount").text(dataLength)
            $("#tbody").empty();
            $("#tbody").html(tr);
            dataExcel();
        },
        complete:function(data){
            if(data.responseText == "AjaxSessionTimeout"){
                window.location.href=basePath;
                return;
            }
        },

    });

}
function seeData(obj) {
    var curDir=$(obj).siblings("input").val();
    reViewAjax(curDir);
}
